<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "profession-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name, label: gettext("Name") %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= submit "Save", phx_disable_with: gettext("Saving...") %>
</form>
