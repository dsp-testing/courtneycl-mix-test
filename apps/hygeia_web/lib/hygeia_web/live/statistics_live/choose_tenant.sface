<div class="container">
  <h1>
    {{ gettext("Choose Tenant") }}
  </h1>
  
  <ul>
    <li :for={{ tenant <- @tenants }}>
      {{ tenant.name }}
    
      <LiveRedirect
        to={{ Routes.statistics_statistics_path(@socket, :show, tenant) }}
      >
        {{ gettext("Show Statistics") }}
      </LiveRedirect>
    </li>
  </ul>
  
  <div
    :if={{ @tenants == [] }}
    class="alert alert-info"
  >
    {{ gettext("No data to display") }}
  </div>
</div>