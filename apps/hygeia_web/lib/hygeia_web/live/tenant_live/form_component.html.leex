<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "tenant-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name, label: gettext("Name") %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= "Save" |> gettext() |> submit(phx_disable_with: gettext("Saving...")) %>
</form>
